// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

model Post {
    id        Int      @id @default(autoincrement())
    slug      String   @unique
    name      String
    content   String
    image     String?
    category  String?
    author    String?
    title     String?
    description String?
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt

    @@index([slug])
}

model Gallery {
    id        Int      @id @default(autoincrement())
    imageUrl     String
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
}
